[{ elvis
 , [
    { config,
      [ #{ dirs    => ["src"]
         , filter  => "*.erl"
         , ruleset => erl_files
         , rules   => [ {elvis_style, invalid_dynamic_call, #{ignore => [ erlang_ls_compiler_diagnostics
                                                                        , erlang_ls_server
                                                                        , els_tcp
                                                                        ]}}
                      , {elvis_style, line_length, #{limit => 80, skip_comments => false}}
                      ]
         }
      , #{ dirs    => ["."]
         , filter  => "Makefile"
         , ruleset => makefiles
         }
      , #{ dirs    => ["."]
         , filter  => "rebar.config"
         , ruleset => rebar_config
         }
      , #{ dirs    => ["."]
         , filter  => "elvis.config"
         , ruleset => elvis_config
         }
      ]}
   ]}
].
